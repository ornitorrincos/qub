{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "allowJs": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
